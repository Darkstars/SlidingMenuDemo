<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >
    <LinearLayout
            android:id="@+id/outer_layout"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >
    <LinearLayout
            android:id="@+id/user_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30px"
            >
        <ImageView android:id="@+id/head_icon"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/img_defhead"
                />
        <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="20px"
                android:text="@string/user_name"
                android:textSize="20sp"
                android:textColor="#fff"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginLeft="30px"
            >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#2000"
                />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/action_settings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:orientation="horizontal"
            android:layout_marginLeft="30px"
            >
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_setting"
                />
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="20px"
                android:text="@string/setting"
                android:textSize="20sp"
                android:textColor="#fff"
                />
    </LinearLayout>


    <LinearLayout
            android:id="@+id/action_xqrd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:orientation="horizontal"
            android:layout_marginLeft="30px"
            >
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_dingwei"
                />
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="20px"
                android:text="@string/dingwei_campus"
                android:textSize="20sp"
                android:textColor="#fff"
                />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/action_share"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:orientation="horizontal"
            android:layout_marginLeft="30px"
            >
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_shareapp"
                />
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="20px"
                android:text="@string/share_app"
                android:textSize="20sp"
                android:textColor="#fff"
                />
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>